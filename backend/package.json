{
  "name": "stayfinder-backend",
  "version": "1.0.0",
  "description": "Backend API for StayFinder - Airbnb clone",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "db:generate": "prisma generate",
